modules = ["nodejs-22", "python-3.11"]
[agent]
expertMode = true
integrations = ["github:1.0.0"]

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "quartz-dev"

[[workflows.workflow]]
name = "quartz-dev"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "npx quartz build --serve"
waitForPort = 5000

[workflows.workflow.metadata]
outputType = "webview"

[[ports]]
localPort = 3001
externalPort = 3001

[[ports]]
localPort = 5000
externalPort = 80

[nix]
channel = "stable-25_05"
